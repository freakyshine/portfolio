---
const currentPath = new URL(Astro.request.url).pathname.slice(1);
import '../../styles/header.scss'
---
<header>
<p id="open" class="mobile bold">Menu</p>
<nav class="closed bold">
    <ul>
        <li><a class={currentPath === "" ? "active uncasual" : "uncasual"} href="/">Welcome</a></li>
        <li><a class={currentPath === "#Highlighted%20Projects" ? "active uncasual" : "uncasual"} href="/#Highlighted Projects">Projects</a></li>
        <!-- <li><a class={currentPath === "about" ? "active uncasual" : "uncasual"} href="/about">Me</a></li> -->
        <!-- <li><a class={currentPath === "gallery" ? "active uncasual" : "uncasual"} href="/gallery">Gallery</a></li> -->
    </ul>
    <p id="close" class="mobile dark">Close</p>
</nav>

<script>
    document.getElementById("open").addEventListener('click', () => {
        document.getElementsByTagName("nav")[0].classList.remove("closed");
        document.getElementById("open").style.display = "none";
    });
    document.getElementById("close").addEventListener('click', () => {
        document.getElementsByTagName("nav")[0].classList.add("closed");
        document.getElementById("open").style.display = "block";
    });
  </script></header>